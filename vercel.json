{
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.0"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.php"
    }
  ],


  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "DB_CONNECTION": "mysql",
    "DB_HOST": "your-database-host",
    "DB_PORT": "3306",
    "DB_DATABASE": "your-database-name",
    "DB_USERNAME": "your-database-username",
    "DB_PASSWORD": "your-database-password"
  }
  }
